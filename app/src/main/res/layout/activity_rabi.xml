        android:layout_marginTop="50dp"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grapes"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
